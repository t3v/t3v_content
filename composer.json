{
  "name": "t3v/t3v_content",
  "type": "typo3-cms-extension",
  "description": "The TYPO3voila Content extension.",
  "authors": [
    {
      "name": "Maik Kempe",
      "email": "mkempe@bitaculous.com",
      "homepage": "https://bitaculous.com"
    }
  ],
  "keywords": [
    "CMS",
    "Content",
    "T3v",
    "TYPO3",
    "TYPO3voila",
    "UH LÁLÁ"
  ],
  "homepage": "https://t3v.github.io/t3v_content/",
  "support": {
    "issues": "https://github.com/t3v/t3v_content/issues"
  },
  "license": "MIT",
  "config": {
    "preferred-install": {
      "typo3/cms": "source"
    },
    "bin-dir": ".Build/bin",
    "vendor-dir": ".Build/vendor"
  },
  "repositories": [
    { "type": "vcs", "url": "https://github.com/t3v/t3v_core.git" }
  ],
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  },
  "replace": {
    "t3v_content": "self.version",
    "typo3-ter/t3v_content": "self.version"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/t3v_content ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/t3v_content"
    ]
  },
  "require": {
    "php": ">= 5.6",
    "typo3/cms-core": ">= 7.6.0, < 8.1.0",
    "typo3-ter/gridelements": "~7.0.5",
    "t3v/t3v_core": "*"
  },
  "require-dev": {
    "namelesscoder/typo3-repository-client": "~1.3.1",
    "mikey179/vfsStream": "~1.6.4",
    "phpunit/phpunit": "~5.7.13"
  },
  "autoload": {
    "psr-4": {
      "T3v\\T3vContent\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T3v\\T3vContent\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
      "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
    }
  }
}