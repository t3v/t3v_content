{
  "name": "t3v/t3v_content",
  "type": "typo3-cms-extension",
  "description": "The content extension of TYPO3voilà.",
  "authors": [
    {
      "name": "Maik Kempe",
      "email": "mkempe@bitaculous.com",
      "homepage": "https://bitaculous.com"
    }
  ],
  "keywords": ["CMS", "Content", "Extension", "T3v", "TYPO3", "TYPO3voila", "UH LÁLÁ"],
  "homepage": "https://t3v.github.io/t3v_content/",
  "support": {
    "issues": "https://github.com/t3v/t3v_content/issues"
  },
  "license": "MIT",
  "config": {
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    },
    "bin-dir": ".build/bin",
    "vendor-dir": ".build/vendor"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "replace": {
    "typo3-ter/t3v_content": "self.version"
  },
  "repositories": [
    { "type": "composer", "url": "https://composer.typo3.org" }
  ],
  "require": {
    "php": ">= 5.5 <= 7.2",
    "typo3/cms-core": "^7.6",
    "typo3/cms-fluid-styled-content": "^7.6",
    "gridelementsteam/gridelements": "dev-7-0",
    "maxserv/replacecontent": "^2.0",
    "fluidtypo3/vhs": "^4.4",
    "t3v/t3v_core": "dev-7-x",
    "t3v/t3v_datamapper": "dev-7-x"
  },
  "require-dev": {
    "mikey179/vfsstream": "^1.6",
    "namelesscoder/typo3-repository-client": "^2.0",
    "nimut/testing-framework": "^2.0",
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "psr-4": {
      "T3v\\T3vContent\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T3v\\T3vContent\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".build/vendor/typo3/cms/typo3/sysext/core/Tests",
      "TYPO3\\CMS\\Fluid\\Tests\\": ".build/vendor/typo3/cms/typo3/sysext/fluid/Tests"
    }
  },
  "extra": {
    "typo3/cms": {
      "app-dir": ".build",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "extension-key": "t3v_content",
      "web-dir": ".build/web"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .build/web/typo3conf/ext/",
      "[ -L .build/web/typo3conf/ext/t3v_content ] || ln -snvf ../../../../. .build/web/typo3conf/ext/t3v_content"
    ]
  }
}
